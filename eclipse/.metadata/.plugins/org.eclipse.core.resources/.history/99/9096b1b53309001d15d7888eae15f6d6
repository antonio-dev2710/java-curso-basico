package com.loaine.cursojava.aula36;

public class MinhaCalculadora {
	//sobrecarga, precisa mudar algo especifico porem o nome
	//do metodo é o mesmo
	//É um titpo de polimorfimos de compilação
	
	public static int fatorialNR(int num1) {
		
		if( num1 == 0) {
			return 1;
		}
		
		int total= 1;

			for(int i=num1;i>1;i--) {
				total*=i;
			
				
		}
		
		
		return total;
		
	}
	
	//metodos recursivos são utilizados em estrutura de dados
public static int fatorial(int num1) {
	
	//ponto de parada
	if( num1 == 0) {
		return 1;
	}
		return num1*fatorial(num1-1);
		
	}
}
