package com.loaine.cursojava.lista03;

import java.util.Scanner;

public class Questao15 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner scan=new Scanner(System.in);

		//digitar as notas 
		//contar o numero de notas

		//somar as notas
		// a partir do numero de ntoas tirar a média

		
		double media=0;
		int numeroDeNotas=0;
		
		System.out.println("Digite o número de notas:");
		int i=scan.nextInt();
		if(i<=1) {
			System.out.println("tem que ser no mínimo duas notas:");
		}
		System.out.println("Digite as notas aq:");
	
		do {
				
				
				double notas=scan.nextDouble();
				media=media+notas;
				i--;
				 numeroDeNotas++;
				 
				 if(notas>10 || notas<0) {
					 
					 media=media-notas;
					 System.out.println("vc digitou um valor incoerente:");
					 System.out.println("digite a nota novamente :");
					  notas=scan.nextDouble();
					 i++;
					 media=media+notas;
					 
				 }
		}
		while(i>=1);
		
		media = media / numeroDeNotas;
		
		System.out.println("Sua média é:"+media);
		
	}
	

}
