		double temp = 0, auxTemp=0,auxDaTempMenor=0;
		double recebeAux=0;
		double qtdTemp = 5;
		double aux=0;
		double media=0;
		double totalMenor=0;
		double resultMenor=0,resultMaior=0;
	for( int i=0;i<qtdTemp;i++){
		
		temp=scan.nextDouble();
		
		
		if(temp>auxTemp) {
			
			resultMaior=temp;
		
			
		}
		auxTemp=temp;
		media=media+temp;
		
				
		
if(resultMenor<auxTemp) {
			
	resultMenor=temp;
			
			
		}
resultMenor=auxTemp;

		}
	
			System.out.println("Média:"+media/qtdTemp);
			System.out.println("Maior:"+resultMaior);
			System.out.println("Menor:"+resultMenor);
		
		
	}

	

	
	
