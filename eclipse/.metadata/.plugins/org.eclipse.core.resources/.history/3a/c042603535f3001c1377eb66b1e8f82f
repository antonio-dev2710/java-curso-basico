package com.loaine.cursojava.lista05;

import java.util.Random;
import java.util.Scanner;

public class Questao01 {

	public static void main(String[] args) {
		
		
		Scanner scan= new Scanner(System.in);
		
		int[] [] numeros=new int[4][4];
		int maior=0;
		
		for(int i =0;i<numeros.length;i++) {
			
			for(int j =0;j<numeros[i].length;j++) {
				System.out.println("Escolha um número:");
				 Random gerador = new Random();
				 
				numeros[i][j]=scan.nextInt(gerador.nextInt(10));
				
				if(numeros[i][j]>=0&&numeros[i][j]<=9) {
				
				System.out.println("linha"+i+"coluna"+j);
					if(numeros[i][j]>maior) {
					maior=numeros[i][j];
					System.out.println("O maior numeor é: "+"linha"+i+maior+"coluna"+j);
					}
				
				}
				else {
					System.out.println("Só pode número entre zero e nove");
					
					j--; 
					
					
				}
			}
			
			
		}
		
		
		
	}
	

}
