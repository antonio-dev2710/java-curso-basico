package com.loaine.cursojava.lista03;

import java.util.Scanner;

public class Questao22 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//passar um conjunto de numeros
		//verificar o maio e menor valor
		Scanner scan=new Scanner(System.in);
		double temp1 = 0, auxTemp=0;
		double recebeAux=0;
		double qtdTemp = 5;
		double aux=0;
		double media=0;
		double totalMenor=0;
		double resultMenor=0,resultMaior=0;
	for( int i=0;i<qtdTemp;i++){
		temp1=scan.nextDouble();
			aux=temp1;
			
			if(temp1<recebeAux) {
				resultMenor=recebeAux;
			}
			
			if(temp1>recebeAux) {
				
			  resultMaior=temp1;
	           
	        }
			if(auxTemp<temp1)  {
				auxTemp=temp1;
			}

	        	double menoAjuda2=recebeAux;
	        	if(menoAjuda2<aux) {
	        		recebeAux=aux;
	        	}
	        	
	        	
				recebeAux=aux;	
				media=media+temp1;
						
		}
	
			System.out.println("Média:"+media/qtdTemp);
			System.out.println("Maior:"+resultMaior);
			System.out.println("Menor:"+resultMenor);
		
		
	}

	

	
	
}
