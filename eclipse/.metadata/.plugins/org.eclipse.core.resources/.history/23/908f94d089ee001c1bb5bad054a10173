package com.loaine.cursojava.lista04;

import java.util.Scanner;

public class Questao18 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan= new Scanner(System.in);
		int[] aluno = new int[10];

		int[] nota1 = new int[10];

		int[] nota2 = new int[nota1.length];
		int media=0;
		System.out.println("Digite um  número :");
		
		for(int i=0; i<aluno.length;i++) {
			nota1[i]=scan.nextInt();
			
			nota2[i]=scan.nextInt();
			
			media=nota1[i]+nota2[i];
			media=media/aluno.length;
			
			if(media<7) {
				System.out.print("Aluno: "+ aluno.length+"Reprovado = "+ media);
			}
			else if(media>=7 && media<=10) {
				System.out.print("Aluno: "+ aluno.length+"Reprovado = "+ media);
					
			}
		
		}
			
	}

}
