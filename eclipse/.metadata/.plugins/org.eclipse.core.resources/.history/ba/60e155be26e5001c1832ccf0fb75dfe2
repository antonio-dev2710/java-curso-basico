package com.loaine.cursojava.lista03;

import java.util.Scanner;

public class Questao22 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//passar um conjunto de numeros
		//verificar o maio e menor valor
		Scanner scan=new Scanner(System.in);
		double temp1 = 0, auxTemp=0;
		double recebeAux=0;
		double qtdTemp = 10;
		double aux=0;
		double media=0;
		double totalMenor=0;
		double resultMenor=0,resultMaior=0;
	for( int i=0;i<qtdTemp;i++){
		temp1=scan.nextDouble();
			aux=temp1;
						
			if(temp1<recebeAux) {
				if(resultMenor>temp1) {
					 resultMenor = temp1;
					}
				
				}

			if(auxTemp>=recebeAux) {
				if(temp1>recebeAux) {
					 resultMenor = recebeAux;
					 
				}
				
			  resultMaior=auxTemp;
	           
	        }
			if(auxTemp<temp1)  {
				auxTemp=temp1;
			}

	        	
				recebeAux=aux;	
				media=media+temp1;
						
		}
	
			System.out.println("Média:"+media/qtdTemp);
			System.out.println("Maior:"+resultMaior);
			System.out.println("Menor:"+resultMenor);
		
		
	}

	

	
	
}
