package com.loaine.cursojava.lista07;

import java.util.Scanner;

public class ContaCorrente {
	
	String numero;
		
	double saldo=1000;
	int totalDeposito,totalSaque;
	double saque,deposito, bonusEspecial;
	
	Scanner scan=new Scanner(System.in);
	
	//verifiacao do numero
	boolean verificarNumeroConta(){
		
		
		while(numero.length()!=8) {
			System.out.println("Seu numero esta incorreto, digite novamente");
			 numero=scan.next();
			 return false;
		}
		return true;
	}
	//check especial	
	double verificarXequeEspecial(boolean especial) {
		
		if(especial) {
			
			bonusEspecial=500;
			System.out.println("Vc é um cliente especial, recebeu um bonus de: "+bonusEspecial);
		}
		
		else {
		System.out.println("Vc n é um cliente especial, recebeu um bonus de: "+bonusEspecial);
		}
		return bonusEspecial;
	}
		
	
	
		//Depoisitar
	double depositar(boolean vfDeposito ) {
		
		while(vfDeposito) {
			
			System.out.println("Digite o valor?");
			deposito=scan.nextDouble();
			saldo+=deposito;
			totalDeposito+=deposito;
			if(deposito==0) {
				vfDeposito=false;
			}
			else {
				System.out.println("Deseja fzr mais algum deposito?");
				vfDeposito=scan.nextBoolean();
			}
		}
		
		return deposito;
	}
		
		//saque
double saque(boolean vfSaque ) {
		
		while(vfSaque) {
			
			System.out.println("Digite o valor?");
			saque=scan.nextDouble();
			saldo-=saque;
			totalDeposito+=saque;
			if(saque==0) {
				vfSaque=false;
			}
			
			
			else {
				System.out.println("Deseja fzr mais algum deposito?");
				vfSaque=scan.nextBoolean();
			}
		}
		
		return saque;
	}
		
		
		
		
		
}
	

