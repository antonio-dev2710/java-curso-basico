package com.loaine.cursojava.lista03;

import java.util.Scanner;

public class Questao21 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//verificar quantas notas tem em cima do valor
		Scanner scan=new Scanner(System.in);
		
		
		
		
		double preco=(Double) null;
		
		
		System.out.println("Tablea de preços ");
		double totalPrecos = 0;
		
		
		for(int i=1;preco!=0 ;i++) {
			preco=scan.nextDouble();
			
			System.out.println("Produto"+i+": "+"R$"+String.format(" %.2f",totalPrecos ).replaceAll(",", "."));
			
		}
		System.out.println("fim");
		
	}


	
	
}
