package com.loaine.cursojava.aula20;

public class MatrizesTresD {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//-----------------------------------linha-coluna-profundidade
		double [][][] matirz3D= new double [3]    [3]     [3];
		int soma=0;
		int somaPar=0;
		int somaImpar=0;
for(int i = 0 ; i<matirz3D.length;i++) {
			
			for(int j = 0 ; j<matirz3D[i].length;j++) {
				
				System.out.println();
					for(int k = 0 ; j<matirz3D[i][j].length;k++) {
					
						matirz3D[i][j][k]= i+j+k;
						
						soma+=matirz3D[i][j][k];
						//%=modulo
						if(soma%2==0) {
							somaPar+=matirz3D[i][j][k];
						}
						
						else {
							somaImpar+=matirz3D[i][j][k];
						}
					}
			}

			System.out.println();
		}
	}

}
